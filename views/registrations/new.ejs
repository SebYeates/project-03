<h1>New User Page</h1>

<form class="" action="/register" method="post">

  <div class="">
    <label for="name"></label>
    <input type="text" id="name" name="name" placeholder="Name">
  </div>

  <div class="">
    <label for="email"></label>
    <input type="email" id="email" name="email" placeholder="Email">
  </div>

  <div class="">
    <label for="profileImage"></label>
    <input type="text" id="profileImage" name="profileImage" placeholder="Profile image URL">
  </div>

  <div class="">
    <label for="password"></label>
    <input type="password" id="password" name="password" placeholder="Password">
  </div>

  <div class="">
    <label for="passwordConfirmation"></label>
    <input type="password" id="passwordConfirmation" name="passwordConfirmation" placeholder="Confirm password">
  </div>

  <button name="button">Submit</button>

</form>
